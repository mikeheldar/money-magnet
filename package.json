{
  "name": "money-magnet",
  "version": "1.0.0",
  "description": "Money Magnet Finance Management Application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "cd server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm install && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../frontend && npm install",
    "init:db": "cd server && npm run init-db",
    "start:server": "cd server && npm start",
    "start:frontend": "cd frontend && npm run dev"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 9.0.0"
  }
}

